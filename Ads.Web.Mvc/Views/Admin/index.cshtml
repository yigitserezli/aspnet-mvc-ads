<h1>Admin Panel</h1>

<div>
    <h2>Pending Items</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Item Type</th>
                <th>Pending Count</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Blogs</td>
                <td><a asp-action="Blogs">(@ViewBag.PendingBlogsCount) pending</a></td>
            </tr>
            <tr>
                <td>Blog Comments</td>
                <td><a asp-action="BlogComments">(@ViewBag.PendingBlogCommentsCount) pending</a></td>
            </tr>
            <tr>
                <td>Adverts</td>
                <td><a asp-action="Adverts">(@ViewBag.PendingAdvertsCount) pending</a></td>
            </tr>
            <tr>
                <td>Advert Comments</td>
                <td><a asp-action="AdvertComments">(@ViewBag.PendingAdvertCommentsCount) pending</a></td>
            </tr>
        </tbody>
    </table>
</div>
