@using App.Data.Entities;
@model AdvertEntity

<form asp-action="Edit" asp-controller="Seller" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockCount"></label>
        <input asp-for="StockCount" class="form-control" />
        <span asp-validation-for="StockCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <select asp-for="CategoryId" asp-items="@ViewBag.SelectItem" class="form-control">
            <option value="" selected disabled>Seçiminiz...</option>
        </select>

    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" type="file" name="ImageUrl" class="form-control" />
       
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
